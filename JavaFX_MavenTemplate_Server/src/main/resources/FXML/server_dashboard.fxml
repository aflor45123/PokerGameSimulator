<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ServerDashboardController"
            prefWidth="900" prefHeight="560" stylesheets="@../Styles/server.css">

    <!-- Top: server controls -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="toolbar" BorderPane.alignment="CENTER">
            <children>
                <Label text="Server:"/>
                <Label fx:id="statusLabel" text="OFFLINE" styleClass="status-offline"/>
                <Separator orientation="VERTICAL"/>
                <Label text="Port:"/>
                <Label fx:id="portLabel" text="—"/>
                <Separator orientation="VERTICAL"/>
                <Label text="Clients connected:"/>
                <Label fx:id="clientCountLabel" text="0" styleClass="badge"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button fx:id="startBtn" text="Start" onAction="#startServer"/>
				<Button fx:id="stopBtn" text="Stop" onAction="#stopServer" disable="true"/>
            </children>
            <padding><Insets top="8" right="10" bottom="8" left="10"/></padding>
        </HBox>
    </top>

    <!-- Center: split list and details -->
    <center>
        <SplitPane dividerPositions="0.6">
            <items>
                <!-- ListView feed (required) -->
                <VBox spacing="8">
                    <children>
                        <Label text="Live Event Feed (All Clients)" styleClass="section"/>
                        <ListView fx:id="eventList" prefHeight="440"/>
                        <HBox spacing="8">
                            <children>
                                <Button text="Clear Feed" onAction="#handleClearFeed"/>
                                <CheckBox fx:id="autoscrollCheck" text="Autoscroll" selected="true"/>
                            </children>
                        </HBox>
                    </children>
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                </VBox>

                <!-- Optional details panel -->
                <VBox spacing="8">
                    <children>
                        <Label text="Current Round / Last Result" styleClass="section"/>
                        <GridPane hgap="10" vgap="8">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" minWidth="170"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                            <children>
                                <Label text="Selected Client:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <Label fx:id="selectedClientLabel" text="—" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Last Bet (Ante / Pair+ / Play):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <Label fx:id="betLabel" text="0 / 0 / 0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Outcome:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <Label fx:id="outcomeLabel" text="—" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                <Label text="Delta ($):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <Label fx:id="deltaLabel" text="0" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                                <Label text="Is playing another hand?" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                <Label fx:id="playingLabel" text="—" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                            </children>
                        </GridPane>
                    </children>
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                </VBox>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="footerbar" BorderPane.alignment="CENTER">
            <children>
                <Label text="Log level:"/>
                <ChoiceBox fx:id="logLevelChoice"/>
                <Button text="Save Logs…" onAction="#handleSaveLogs"/>
            </children>
            <padding><Insets top="8" right="10" bottom="8" left="10"/></padding>
        </HBox>
    </bottom>
</BorderPane>
