<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>




<BorderPane xmlns:fx="http://javafx.com/fxml/1" styleClass="borderpane" fx:controller = "SingleGame"
	fx:id="root">
	
	<center>
		<StackPane>
			
			<!-- Created rectangular backdrop for main title -->
			<Rectangle fx:id = "rect" width = "500" height = "400" arcWidth = "20" arcHeight = "20"
				styleClass = "rect"/>
				
			<!-- Created inputText text for Input Port Number -->
			<Text fx:id = "inputText" text = "Input Port Number:" styleClass = "regular" 
				StackPane.alignment = "CENTER" translateX = "-150" translateY = "-80"/>
			
			<!-- TextField made for user to enter port number -->
			<TextField fx:id = "importNum" promptText = "Enter port # here" StackPane.alignment = "CENTER" 
				prefWidth = "100" maxWidth = "200" translateX = "50" translateY = "-80"/>
			
			<!-- Created inputText text for Input IP address -->
			<Text fx:id = "inputText1" text = "Input IP address:" styleClass = "regular" 
				StackPane.alignment = "CENTER" translateX = "-150" translateY = "-40"/>
			
			<!-- TextField made for user to enter IP address -->
			<TextField fx:id = "ipAddress" promptText = "Enter IP address here" StackPane.alignment = "CENTER" 
				prefWidth = "100" maxWidth = "200" translateX = "50" translateY = "-40"/>
			
			<!-- Changes scene to welcome screen-->
			<Button fx:id = "gameResults" text = "Connect to Server" StackPane.alignment = "CENTER" 
				translateY = "120" onAction = "#backToWelcome"/>
			
			
				
			
			
		
		</StackPane>
	</center>
</BorderPane>