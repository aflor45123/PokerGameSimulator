<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>




<BorderPane xmlns:fx="http://javafx.com/fxml/1" styleClass="borderpane" fx:controller = "GamePlayController"
	fx:id="root">
	
	<!-- Created Options menu -->
	<top>
		<HBox alignment = "CENTER">
			<MenuBar>
				<Menu text = "Options">
					<MenuItem text = "Exit" onAction = "#backToWelcome"/>
					<MenuItem text = "Fresh Start"/>
					<MenuItem text = "New Look" onAction = "#getNewLook"/>
				</Menu>
			</MenuBar>
		</HBox>
	</top>
	
	
	<center>
		<StackPane>
		
			<!-- Created title for Dealer's Cards -->
			<Text fx:id = "title" text = "Dealer's Cards" styleClass = "title" 
				StackPane.alignment = "TOP_CENTER"/>
				
			<!-- Created rectangular backdrop for dealer's cards' -->
			<Rectangle fx:id = "rect" width = "500" height = "150" arcWidth = "20" arcHeight = "20"
				translateY = "-170" styleClass = "rect"/>
			
			<!-- Created title for Player's Cards -->
			<Text fx:id = "title" text = "Your Cards" styleClass = "title" 
				StackPane.alignment = "CENTER" translateY = "5"/>
			
			<!-- Created rectangular backdrop for player's cards' -->
			<Rectangle fx:id = "rect" width = "500" height = "150" arcWidth = "20" arcHeight = "20"
				translateY = "100" styleClass = "rect"/>
			
			<!-- Created a card1 for dealer -->
			<StackPane fx:id = "card1" prefWidth = "80" maxWidth = "80" prefHeight = "110" maxHeight = "110" 
				translateX = "-140" translateY = "-170" styleClass = "card"/>
			
			<!-- Created a card2 for dealer -->
			<StackPane fx:id = "card2" prefWidth = "80" maxWidth = "80" prefHeight = "110" maxHeight = "110" 
				translateY = "-170" styleClass = "card"/>
			
			<!-- Created a card3 for dealer -->
			<StackPane fx:id = "card3" prefWidth = "80" maxWidth = "80" prefHeight = "110" maxHeight = "110" 
				translateX = "140" translateY = "-170" styleClass = "card"/>
				
			<!-- Created a card4 for player -->
			<StackPane fx:id = "card4" prefWidth = "80" maxWidth = "80" prefHeight = "110" maxHeight = "110" 
				translateX = "-140" translateY = "100" styleClass = "card"/>
			
			<!-- Created a card5 for player -->
			<StackPane fx:id = "card5" prefWidth = "80" maxWidth = "80" prefHeight = "110" maxHeight = "110" 
				translateY = "100" styleClass = "card"/>
			
			<!-- Created a card6 for player -->
			<StackPane fx:id = "card6" prefWidth = "80" maxWidth = "80" prefHeight = "110" maxHeight = "110" 
				translateX = "140" translateY = "100" styleClass = "card"/>
			
			<!-- Set text for Game Log -->
			<Text fx:id = "title" text = "Game Log" styleClass = "sideTitle" 
				StackPane.alignment = "CENTER_LEFT" translateY = "-280"/>
			
			<!-- ListView for gameLog -->
			<ListView fx:id = "gameLog" prefWidth = "150" prefHeight = "100" maxWidth = "150" maxHeight = "100"
				StackPane.alignment = "CENTER_LEFT" translateY = "-210" styleClass = "listView"/> 
			
			<!-- Set text for Ante Wager -->
			<Text fx:id = "title" text = "Ante Wager" styleClass = "sideTitle" 
				StackPane.alignment = "CENTER_LEFT" translateY = "-130"/>
			
			<!-- ListView for anteList -->
			<ListView fx:id = "anteList" prefWidth = "150" prefHeight = "100" maxWidth = "150" maxHeight = "100"
				StackPane.alignment = "CENTER_LEFT" translateY = "-60" styleClass = "listView"/> 
				
			<!-- Set text for Pair Plus Wager -->
			<Text fx:id = "title" text = "Pair Plus Wager" styleClass = "sideTitle" 
				StackPane.alignment = "CENTER_LEFT" translateY = "20"/>
			
			<!-- ListView for pairPlusList -->
			<ListView fx:id = "pairPlusList" prefWidth = "150" prefHeight = "100" maxWidth = "150" maxHeight = "100"
				StackPane.alignment = "CENTER_LEFT" translateY = "90" styleClass = "listView"/> 
			
			<!-- Set text for Play Wager -->
			<Text fx:id = "title" text = "Ante Wager" styleClass = "sideTitle" 
				StackPane.alignment = "CENTER_LEFT" translateY = "170"/>
			
			<!-- ListView for playList -->
			<ListView fx:id = "playList" prefWidth = "150" prefHeight = "100" maxWidth = "150" maxHeight = "100"
				StackPane.alignment = "CENTER_LEFT" translateY = "240" styleClass = "listView"/> 
			
			<!-- Set text for Total Winnings -->
			<Text fx:id = "title" text = "Total Winnings:" styleClass = "sideTitle" translateX = "-40"
				translateY = "-280" StackPane.alignment = "CENTER_RIGHT"/>
			
			<!-- Created circle backdrop for Pair Plus -->
			<Circle fx:id = "circ" centerX = "100" centerY = "100" radius = "50" 
				StackPane.alignment = "CENTER_RIGHT" translateY = "-150" styleClass = "circ"/>
			
			<!-- Set text for Pair Plus -->
			<Text fx:id = "title" text = "Pair Plus" styleClass = "regular" translateX = "-10"
				translateY = "-160" StackPane.alignment = "CENTER_RIGHT"/>
				
			<!-- Set TextField for Pair Plus -->
			<TextField fx:id = "pairPlusWager" StackPane.alignment = "CENTER_RIGHT" prefWidth = "30"
				maxWidth = "50" translateX = "-25" translateY = "-130"/>
			
			<!-- Created circle backdrop for Ante -->
			<Circle fx:id = "circ" centerX = "100" centerY = "100" radius = "50" 
				StackPane.alignment = "CENTER_RIGHT" styleClass = "circ"/>
			
			<!-- Set text for Ante -->
			<Text fx:id = "title" text = "Ante" styleClass = "regular" translateX = "-30"
				translateY = "-10" StackPane.alignment = "CENTER_RIGHT"/>
				
			<!-- Set TextField for Ante -->
			<TextField fx:id = "anteWager" StackPane.alignment = "CENTER_RIGHT" prefWidth = "30"
				maxWidth = "50" translateX = "-25" translateY = "20"/>
			
			<!-- Created circle backdrop for Play -->
			<Circle fx:id = "circ" centerX = "100" centerY = "100" radius = "50" 
				StackPane.alignment = "CENTER_RIGHT" translateY = "150" styleClass = "circ"/>
			
			<!-- Set text for Play -->
			<Text fx:id = "title" text = "Play" styleClass = "regular" translateX = "-35"
				translateY = "140" StackPane.alignment = "CENTER_RIGHT"/>
				
			<!-- Set TextField for Play -->
			<TextField fx:id = "playWager" StackPane.alignment = "CENTER_RIGHT" prefWidth = "30"
				maxWidth = "50" translateX = "-25" translateY = "170"/>
				
			<!-- Created Deal button -->
			<Button text = "dealButton" StackPane.alignment = "BOTTOM_CENTER" 
				translateX = "-150" translateY = "-20" styleClass = "dealButton" onAction = "#startDeal"/>
	
			<!-- Created Play -->
			<Button fx:id = "settle" text = "Play" StackPane.alignment = "BOTTOM_CENTER" 
				translateY = "-20" styleClass = "playButton" onAction = "#settle"/>
			
			<!-- Created Fold button -->
			<Button fx:id = "settle" text = "Fold" StackPane.alignment = "BOTTOM_CENTER" 
				translateX = "150" translateY = "-20" styleClass = "foldButton" onAction = "#settle"/>
				
		</StackPane>
	</center>
	
</BorderPane>